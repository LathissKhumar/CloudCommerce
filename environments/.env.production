# Production Environment Configuration
NODE_ENV=production
PORT=5000
MONGO_URI=mongodb://cloudcommerce-mongo:27017/cloudcommerce
JWT_SECRET=REPLACE_WITH_SECURE_JWT_SECRET
CORS_ORIGIN=https://cloudcommerce.example.com

# Admin Credentials - CHANGE THESE
ADMIN_EMAIL=admin@cloudcommerce.com
ADMIN_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# Features
ENABLE_LOGGING=true
ENABLE_DEBUG=false
ENABLE_SEED_DATA=false

# Registry
DOCKER_REGISTRY=production-registry.example.com

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
